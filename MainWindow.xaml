<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="TroubleShooter — Control+Alt+Space" Height="700" Width="1000"
        Background="#FAFAF9">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FFFFFF" BorderBrush="#E5E5E5" BorderThickness="0,0,0,1">
            <Grid Height="50">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Left Menu Buttons -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="10,0,0,0">
                    <Button Content="☰"
                            Width="40" Height="40"
                            Background="Transparent"
                            BorderThickness="0"
                            FontSize="18"
                            Foreground="#666666"
                            Cursor="Hand"/>
                </StackPanel>

                <!-- Center Title -->
                <TextBlock Grid.Column="1"
                          Text=""
                          FontSize="13"
                          Foreground="#666666"
                          VerticalAlignment="Center"
                          HorizontalAlignment="Center"/>

                <!-- Right Buttons -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="0,0,10,0">
                    <Button Content="↗"
                            Width="40" Height="40"
                            Background="Transparent"
                            BorderThickness="0"
                            FontSize="16"
                            Foreground="#666666"
                            Cursor="Hand"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Chat Messages Area -->
        <ScrollViewer Grid.Row="1"
                     VerticalScrollBarVisibility="Auto"
                     Background="#FAFAF9"
                     Padding="20">
            <StackPanel x:Name="ChatMessagesPanel" Margin="0">
                <!-- Chat messages will be added here dynamically -->
            </StackPanel>
        </ScrollViewer>

        <!-- Input Area - Floating Rounded Style -->
        <Border Grid.Row="2"
               Background="Transparent"
               Padding="20,10,20,20">
            <Border Background="#FFFFFF"
                   CornerRadius="24"
                   BorderBrush="#E5E5E5"
                   BorderThickness="1"
                   Padding="12,10">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" BlurRadius="12" ShadowDepth="0" Opacity="0.08"/>
                </Border.Effect>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left Action Buttons -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Bottom" Margin="0,0,10,0">
                        <Button Content="+"
                                Width="36" Height="36"
                                Background="Transparent"
                                BorderThickness="0"
                                FontSize="20"
                                Foreground="#999999"
                                Cursor="Hand"
                                Margin="0,0,4,0">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                       CornerRadius="8">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                    VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#F5F5F4"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button Content="⇄"
                                Width="36" Height="36"
                                Background="Transparent"
                                BorderThickness="0"
                                FontSize="16"
                                Foreground="#999999"
                                Cursor="Hand"
                                Margin="0,0,4,0">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                       CornerRadius="8">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                    VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#F5F5F4"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button Content="↻"
                                Width="36" Height="36"
                                Background="Transparent"
                                BorderThickness="0"
                                FontSize="18"
                                Foreground="#999999"
                                Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                       CornerRadius="8">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                    VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#F5F5F4"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>

                    <!-- Message Input -->
                    <Border Grid.Column="1"
                           Background="Transparent"
                           CornerRadius="12"
                           Padding="8,4"
                           Margin="0,0,10,0">
                        <TextBox x:Name="MessageInput"
                                Background="Transparent"
                                Foreground="#1A1A1A"
                                FontSize="14"
                                BorderThickness="0"
                                TextWrapping="Wrap"
                                MaxHeight="120"
                                VerticalScrollBarVisibility="Auto"
                                VerticalContentAlignment="Center"
                                KeyDown="MessageInput_KeyDown"
                                GotFocus="MessageInput_GotFocus"
                                LostFocus="MessageInput_LostFocus"
                                Text="답글..."/>
                    </Border>

                    <!-- Right Section: Category Selector + Send Button -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Bottom" Margin="0,0,4,0">
                        <ComboBox x:Name="CategoryComboBox"
                                 Width="120" Height="36"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 FontSize="12"
                                 Foreground="#666666"
                                 VerticalContentAlignment="Center"
                                 Margin="0,0,8,0">
                            <ComboBoxItem Content="전체" IsSelected="True" Tag=""/>
                            <ComboBoxItem Content="beBOTLite" Tag="beBOTLite"/>
                            <ComboBoxItem Content="beSRT" Tag="beSRT"/>
                            <ComboBoxItem Content="beSRTExec" Tag="beSRTExec"/>
                            <ComboBoxItem Content="blueAI" Tag="blueAI"/>
                            <ComboBoxItem Content="blueTiT" Tag="blueTiT"/>
                            <ComboBoxItem Content="WAG" Tag="WAG"/>
                            <ComboBoxItem Content="비봇마이너" Tag="비봇마이너"/>
                            <ComboBoxItem Content="기타" Tag="기타"/>
                        </ComboBox>

                        <Button x:Name="SendButton"
                               Content="↑"
                               Width="36" Height="36"
                               Background="#7CB991"
                               Foreground="White"
                               FontSize="18"
                               FontWeight="Bold"
                               BorderThickness="0"
                               Cursor="Hand"
                               Click="SendButton_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                       CornerRadius="8">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                    VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#6AAB7F"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#5A9B6F"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </Border>
    </Grid>
</Window>
