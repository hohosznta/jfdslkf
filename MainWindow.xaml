<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="TroubleShooter — Control+Alt+Space" Height="700" Width="1000"
        Background="#FAFAF9">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FFFFFF" BorderBrush="#E5E5E5" BorderThickness="0,0,0,1">
            <Grid Height="50">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Left Menu Buttons -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="10,0,0,0">
                    <Button Content="☰"
                            Width="40" Height="40"
                            Background="Transparent"
                            BorderThickness="0"
                            FontSize="18"
                            Foreground="#666666"
                            Cursor="Hand"/>
                </StackPanel>

                <!-- Center Title -->
                <TextBlock Grid.Column="1"
                          Text="Qdrant에서 pgvector로 마이그레이션"
                          FontSize="13"
                          Foreground="#666666"
                          VerticalAlignment="Center"
                          HorizontalAlignment="Center"/>

                <!-- Right Buttons -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="0,0,10,0">
                    <Button Content="↗"
                            Width="40" Height="40"
                            Background="Transparent"
                            BorderThickness="0"
                            FontSize="16"
                            Foreground="#666666"
                            Cursor="Hand"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Chat Messages Area -->
        <ScrollViewer Grid.Row="1"
                     VerticalScrollBarVisibility="Auto"
                     Background="#FAFAF9"
                     Padding="20">
            <StackPanel x:Name="ChatMessagesPanel" Margin="0">
                <!-- Sample User Message -->
                <Border Background="#FFFFFF"
                       CornerRadius="18"
                       Padding="16,12"
                       Margin="0,5,0,10"
                       HorizontalAlignment="Right"
                       MaxWidth="600">
                    <Border.Effect>
                        <DropShadowEffect Color="#E5E5E5" BlurRadius="8" ShadowDepth="2" Opacity="0.3"/>
                    </Border.Effect>
                    <TextBlock Text="Qdrant에서 pgvector로 마이그레이션하는 방법을 알려주세요."
                              TextWrapping="Wrap"
                              Foreground="#1A1A1A"
                              FontSize="14"/>
                </Border>

                <!-- Sample Assistant Message -->
                <Border Background="#F5F5F4"
                       CornerRadius="18"
                       Padding="16,12"
                       Margin="0,5,0,10"
                       HorizontalAlignment="Left"
                       MaxWidth="700">
                    <Border.Effect>
                        <DropShadowEffect Color="#E5E5E5" BlurRadius="8" ShadowDepth="2" Opacity="0.3"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="Qdrant에서 pgvector로 마이그레이션하는 과정을 단계별로 안내해드리겠습니다."
                                  TextWrapping="Wrap"
                                  Foreground="#1A1A1A"
                                  FontSize="14"
                                  LineHeight="20"/>
                    </StackPanel>
                </Border>

                <!-- Additional messages will be added here -->
            </StackPanel>
        </ScrollViewer>

        <!-- Input Area - Floating Rounded Style -->
        <Border Grid.Row="2"
               Background="Transparent"
               Padding="20,10,20,20">
            <Border Background="#FFFFFF"
                   CornerRadius="24"
                   BorderBrush="#E5E5E5"
                   BorderThickness="1"
                   Padding="12,10">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" BlurRadius="12" ShadowDepth="0" Opacity="0.08"/>
                </Border.Effect>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left Action Buttons -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Bottom" Margin="0,0,10,0">
                        <Button Content="+"
                                Width="36" Height="36"
                                Background="Transparent"
                                BorderThickness="0"
                                FontSize="20"
                                Foreground="#999999"
                                Cursor="Hand"
                                Margin="0,0,4,0">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                       CornerRadius="8">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                    VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#F5F5F4"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button Content="⇄"
                                Width="36" Height="36"
                                Background="Transparent"
                                BorderThickness="0"
                                FontSize="16"
                                Foreground="#999999"
                                Cursor="Hand"
                                Margin="0,0,4,0">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                       CornerRadius="8">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                    VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#F5F5F4"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button Content="↻"
                                Width="36" Height="36"
                                Background="Transparent"
                                BorderThickness="0"
                                FontSize="18"
                                Foreground="#999999"
                                Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                       CornerRadius="8">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                    VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#F5F5F4"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>

                    <!-- Message Input -->
                    <Border Grid.Column="1"
                           Background="Transparent"
                           CornerRadius="12"
                           Padding="8,4"
                           Margin="0,0,10,0">
                        <TextBox x:Name="MessageInput"
                                Background="Transparent"
                                Foreground="#1A1A1A"
                                FontSize="14"
                                BorderThickness="0"
                                TextWrapping="Wrap"
                                MaxHeight="120"
                                VerticalScrollBarVisibility="Auto"
                                VerticalContentAlignment="Center"
                                KeyDown="MessageInput_KeyDown"
                                GotFocus="MessageInput_GotFocus"
                                LostFocus="MessageInput_LostFocus"
                                Text="답글..."/>
                    </Border>

                    <!-- Right Section: Model Selector + Send Button -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Bottom" Margin="0,0,4,0">
                        <ComboBox Width="100" Height="36"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 FontSize="12"
                                 Foreground="#666666"
                                 VerticalContentAlignment="Center"
                                 Margin="0,0,8,0">
                            <ComboBoxItem Content="Sonnet 4.5" IsSelected="True"/>
                            <ComboBoxItem Content="GPT-4"/>
                        </ComboBox>

                        <Button x:Name="SendButton"
                               Content="↑"
                               Width="36" Height="36"
                               Background="#7CB991"
                               Foreground="White"
                               FontSize="18"
                               FontWeight="Bold"
                               BorderThickness="0"
                               Cursor="Hand"
                               Click="SendButton_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                       CornerRadius="8">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                    VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#6AAB7F"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#5A9B6F"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </Border>
    </Grid>
</Window>
